/**index.wxss**/

page, .bgImg, .weather-wrapper {
  width: 100%;
  height: 100%;
}

page {
  color: white;
  background: rgba(0, 0, 0, 0.3);
}

.bgImg, .weather-wrapper {
  position: absolute;
  top: 0;
  left: 0;
}

.weather-wrapper {
  background: rgba(0, 0, 0, 0.3);
}

/* 当前天气 */

.now-wrapper {
  width: 100%;
  padding: 60rpx 0;
  text-align: center;
}

.now-wrapper .area {
  font-size: 60rpx;
}

.now-wrapper .txt {
  margin-top: 10rpx;
  font-size: 30rpx;
}

.now-wrapper .tmp {
  margin-top: 20rpx;
  font-size: 120rpx;
  font-weight: 300;
}

/* 未来 7 天 */

.future-wrapper {
  width: 100%;
  padding: 32rpx 40rpx 20rpx;
}

.future-list {
  display: flex;
  justify-content: space-between;
  width: 100%;
  margin-top: 25rpx;
}

.future-list .day {
  font-size: 40rpx;
}

.future-list .icon {
  width: 60rpx;
  height: 60rpx;
}

.future-list .temp-wrapper {
  display: flex;
  justify-content: space-between;
  width: 125rpx;
  font-size: 40rpx;
}

.future-list .hTemp {
  display: inline-block;
  width: 40rpx;
  text-align: right;
}

.future-list .lTemp {
  color: #a5c8e1;
}

/* bottom */

.bottom {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-top: 1px solid #c8d6e1;
  text-align: center;
  font-size: 26rpx;
}
